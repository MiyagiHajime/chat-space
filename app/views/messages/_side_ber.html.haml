.side-bar
  .side-header
    .side-header-box
      .side-header-box__name
        = current_user.name
      .side-header-box__icon
        = link_to new_group_path  do
          = icon('fas', 'edit', class: "side-header-icon")
          %spna<>
        = link_to edit_user_path(current_user.id) do
          = icon('fas', 'cog', class: "side-header-icon")
          %spna<>
  .side-body
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "group-link" do
          .group-link__name
            = group.name
          .group-link__message
            = group.show_last_message
