.chat
  .chat-header
    .chat-header-left
      .chat-header-left__group-name 
        = @group.name
      %ul.chat-header-left__group-menber
        menberï¼š
        - @group.users.each do |user|
          %li.user-name= user.name
    .chat-header-right
      = link_to edit_group_path(@group) do
        .chat-header-right__Edit-btn 
          Edit

  .chat-message
    = render @messages

  .chat-footer
    .chat-footer-box
      .from
        = form_for [@group, @message] do |f|
          .input-box
            = f.text_field :content, class: 'message-from', placeholder: 'type a message'
            = f.label :image, class: 'file-label' do
              = icon('fas', 'image', class: 'icon')
              = f.file_field :image, class: 'file-label-input'
            = f.submit 'Send', class: 'submit-btn'